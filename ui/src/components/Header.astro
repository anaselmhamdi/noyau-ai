---
interface Props {
  showNav?: boolean;
}

const { showNav = true } = Astro.props;
---

<header class="sticky top-0 z-50 border-b border-border/50 bg-ink/80 backdrop-blur-lg">
  <div class="container py-4 flex items-center justify-between">
    {/* Logo */}
    <a href="/" class="flex items-center gap-2 no-underline group focus-ring rounded-lg">
      <div class="flex items-center gap-1">
        <span class="text-muted font-mono text-lg group-hover:text-muted/80 transition-colors">[</span>
        <span class="w-2.5 h-2.5 bg-signal rounded-full group-hover:shadow-glow transition-shadow"></span>
        <span class="text-muted font-mono text-lg group-hover:text-muted/80 transition-colors">]</span>
      </div>
      <span class="font-semibold text-text tracking-tight group-hover:text-signal transition-colors">
        Noyau<span class="text-signal">News</span>
      </span>
    </a>

    {/* Navigation */}
    {showNav && (
      <nav class="flex items-center gap-2 sm:gap-4">
        <a
          href="/archives"
          class="link-subtle text-body px-2 py-1 rounded-lg hover:bg-slate/50 transition-colors"
        >
          Archives
        </a>
        <a href="/#subscribe" id="nav-subscribe" class="btn btn-primary text-body">
          Subscribe
        </a>
        <a
          href="/settings"
          id="nav-settings"
          class="hidden p-2 rounded-lg hover:bg-slate/50 transition-colors"
          title="Settings"
        >
          <svg class="w-5 h-5 text-muted" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </a>
      </nav>
    )}
  </div>
</header>

<script>
  // Check auth status and toggle nav items
  async function updateNavForAuth() {
    const subscribeLink = document.getElementById('nav-subscribe');
    const settingsLink = document.getElementById('nav-settings');

    if (!subscribeLink || !settingsLink) return;

    try {
      const res = await fetch('/api/me');
      const data = await res.json();

      if (data.authed) {
        // User is logged in - show settings, hide subscribe
        subscribeLink.classList.add('hidden');
        settingsLink.classList.remove('hidden');
      }
    } catch {
      // Keep defaults (subscribe visible, settings hidden)
    }
  }

  updateNavForAuth();
</script>
