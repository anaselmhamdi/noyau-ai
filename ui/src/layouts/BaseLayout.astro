---
import '../styles/global.css';
import ConsentBanner from '../components/ConsentBanner.astro';

interface Props {
  title: string;
  description?: string;
  canonicalUrl?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  publishedTime?: string;
  author?: string;
  noindex?: boolean;
}

const {
  title,
  description = 'Your daily raw brief on practical engineering news.',
  canonicalUrl,
  ogImage = 'https://noyau.news/og-default.png',
  ogType = 'website',
  publishedTime,
  author = 'noyau',
  noindex = false,
} = Astro.props;

const siteUrl = 'https://noyau.news';
const fullTitle = title === 'NoyauNews' ? 'NoyauNews - Daily Engineering Digest' : `${title} | NoyauNews`;
const posthogKey = import.meta.env.PUBLIC_POSTHOG_KEY || '';
const isDebug = import.meta.env.DEV;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    {/* Fonts - IBM Plex: technical, editorial, distinctive */}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600&family=IBM+Plex+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />

    {/* Robots */}
    {noindex ? (
      <meta name="robots" content="noindex, nofollow" />
    ) : (
      <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    )}

    {/* Canonical */}
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}

    {/* Favicon & Touch Icons */}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    {/* Open Graph */}
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl || siteUrl} />
    <meta property="og:site_name" content="NoyauNews" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_US" />

    {/* Article-specific OG */}
    {ogType === 'article' && publishedTime && (
      <>
        <meta property="article:published_time" content={publishedTime} />
        <meta property="article:author" content={author} />
        <meta property="article:section" content="Technology" />
      </>
    )}

    {/* Twitter Card */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    {/* RSS Feed */}
    <link rel="alternate" type="application/rss+xml" title="NoyauNews - Daily Tech Digest" href="/feed.xml" />

    {/* JSON-LD slot */}
    <slot name="structured-data" />

    <title>{fullTitle}</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <slot name="header" />
    <main class="flex-1">
      <slot />
    </main>
    <slot name="footer" />

    {/* Analytics consent banner */}
    <ConsentBanner />

    <script define:vars={{ posthogKey, isDebug }}>
      window.__POSTHOG_KEY__ = posthogKey;
      window.__POSTHOG_DEBUG__ = isDebug;
    </script>
    <script>
      import { initPostHog, trackPageView, setPageLoadTime, trackReferralLanding } from '../lib/posthog';

      const apiKey = (window as any).__POSTHOG_KEY__;
      const debug = (window as any).__POSTHOG_DEBUG__;

      if (apiKey) {
        initPostHog(apiKey, { debug });
        setPageLoadTime();
        trackPageView(window.location.pathname);

        const params = new URLSearchParams(window.location.search);
        const refCode = params.get('ref');
        if (refCode) {
          const issueMatch = window.location.pathname.match(/\/daily\/(\d{4}-\d{2}-\d{2})/);
          trackReferralLanding(refCode, issueMatch?.[1]);
        }
      }
    </script>
  </body>
</html>
