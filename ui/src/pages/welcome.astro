---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = false;

// Fetch latest issue date for the CTA
let latestDate = new Date().toISOString().split('T')[0];
try {
  const apiUrl = process.env.API_URL || '';
  const res = await fetch(`${apiUrl}/api/issues/latest`);
  if (res.ok) {
    const data = await res.json();
    latestDate = data.date || latestDate;
  }
} catch {}

const formattedDate = new Date(latestDate).toLocaleDateString('en-US', {
  weekday: 'short',
  month: 'short',
  day: 'numeric'
});
---

<BaseLayout
  title="Welcome"
  description="Welcome to NoyauNews. You're now subscribed to the daily engineering digest."
  noindex={true}
>
  <Header slot="header" showNav={false} />

  <section class="py-20 sm:py-28 lg:py-32">
    <div class="container">
      <div class="max-w-lg mx-auto text-center">
        {/* Success icon */}
        <div class="flex justify-center mb-8 opacity-0 animate-fade-in">
          <div class="relative">
            <div class="w-20 h-20 rounded-full bg-good/10 flex items-center justify-center">
              <svg class="w-10 h-10 text-good" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            {/* Animated ring */}
            <div class="absolute inset-0 rounded-full border-2 border-good/30 animate-ping"></div>
          </div>
        </div>

        {/* Headline */}
        <h1 class="text-display text-text mb-4 opacity-0 animate-fade-in-up" style="animation-delay: 100ms">
          You're in
        </h1>

        <p class="text-h2 font-normal text-muted mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 200ms">
          Welcome to the kernel brief.
        </p>

        {/* What happens next */}
        <div class="card text-left mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 300ms">
          <h2 class="section-header mb-4">What happens next</h2>
          <ul class="space-y-3">
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-signal-muted flex items-center justify-center">
                <span class="font-mono text-micro text-signal font-bold">1</span>
              </span>
              <div>
                <p class="text-body text-text font-medium">Check your inbox</p>
                <p class="text-body text-muted">We sent you a welcome email with settings link</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-signal-muted flex items-center justify-center">
                <span class="font-mono text-micro text-signal font-bold">2</span>
              </span>
              <div>
                <p class="text-body text-text font-medium">Daily at <span id="delivery-time">8:00 AM</span></p>
                <p class="text-body text-muted">Get tomorrow's brief delivered <span id="timezone-info">to your inbox</span></p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-signal-muted flex items-center justify-center">
                <span class="font-mono text-micro text-signal font-bold">3</span>
              </span>
              <div>
                <p class="text-body text-text font-medium">Share with your team</p>
                <p class="text-body text-muted">Use the share button to spread the signal</p>
              </div>
            </li>
          </ul>
        </div>

        {/* CTA to latest digest */}
        <div class="opacity-0 animate-fade-in-up" style="animation-delay: 400ms">
          <a
            href={`/daily/${latestDate}`}
            class="btn btn-primary inline-flex items-center gap-2"
          >
            <span>Read today's digest</span>
            <span class="font-mono text-micro opacity-75">({formattedDate})</span>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>

        {/* Social links */}
        <div class="mt-12 pt-8 border-t border-border/50 opacity-0 animate-fade-in" style="animation-delay: 600ms">
          <p class="text-micro text-muted mb-4">Join the community</p>
          <div class="flex items-center justify-center gap-4">
            <a
              href="https://discord.gg/YCbuNqFucb"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-ghost flex items-center gap-2 text-body"
            >
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
              </svg>
              Discord
            </a>
            <a
              href="https://x.com/NoyauNews"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-ghost flex items-center gap-2 text-body"
            >
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
              X / Twitter
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<script>
  import { trackMagicLinkClicked } from '../lib/posthog';

  // Track that user completed signup and landed on welcome page
  trackMagicLinkClicked();

  // Detect user's timezone for display
  function detectTimezone(): string {
    try {
      return Intl.DateTimeFormat().resolvedOptions().timeZone;
    } catch {
      return 'UTC';
    }
  }

  // Format timezone for display (e.g., "America/New_York" -> "New York")
  function formatTimezone(tz: string): string {
    return tz.split('/').pop()?.replace(/_/g, ' ') || tz;
  }

  // Update delivery info with user preferences or detected timezone
  async function updateDeliveryInfo() {
    const deliveryTimeEl = document.getElementById('delivery-time');
    const timezoneInfoEl = document.getElementById('timezone-info');

    // First, set default based on detected timezone
    const detectedTz = detectTimezone();
    if (timezoneInfoEl) {
      timezoneInfoEl.textContent = `in ${formatTimezone(detectedTz)} time`;
    }

    // Then try to fetch user preferences if logged in
    try {
      const res = await fetch('/api/me');
      if (!res.ok) return;

      const data = await res.json();
      if (!data.authed) return;

      if (data.delivery_time_local && deliveryTimeEl) {
        // Parse HH:MM to 12-hour format
        const [hour, minute] = data.delivery_time_local.split(':').map(Number);
        const ampm = hour >= 12 ? 'PM' : 'AM';
        const hour12 = hour % 12 || 12;
        deliveryTimeEl.textContent = `${hour12}:${minute.toString().padStart(2, '0')} ${ampm}`;
      }

      if (data.timezone && timezoneInfoEl) {
        // Format timezone for display (e.g., "America/New_York" -> "New York time")
        const cityName = data.timezone.split('/').pop()?.replace(/_/g, ' ') || data.timezone;
        timezoneInfoEl.textContent = `in ${cityName} time`;
      }
    } catch {
      // Silently fail - detected timezone is fine
    }
  }

  updateDeliveryInfo();
</script>
